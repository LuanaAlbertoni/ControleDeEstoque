@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var panel = "panel-default";
    
    if (ViewBag.Panel != null)
    {
        panel = String.Concat("panel-", ViewBag.Panel);
    }
}

@section estilos{
    @RenderSection("estilos", required: false)
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-md-9 form-horizontal">

        <div class="panel @panel">
            <div class="panel-heading">
                @ViewBag.Action
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>

        <div>
            @Html.ActionLink("Voltar", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script>
        $(function () {

            $("input[type=text], select").first().focus();

            $('.datetime').datepicker({
                format: "dd/mm/yyyy",
                todayBtn: true,
                todayHighlight: true,
                language: "pt-BR"
            });
        });
    </script>
    @RenderSection("scripts", required: false)
}
