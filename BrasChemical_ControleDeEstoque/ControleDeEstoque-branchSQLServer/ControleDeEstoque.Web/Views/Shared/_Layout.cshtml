                            <li>@Html.ActionLink("Expedição", "Index", "Expedicao")</li>
                        </ul>
                    </div>
                </div>
            </div>*@

        <div id="page-wrapper">
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/sbadmin/js")

    @*<script>
        $(document).keypress(function (event) {
            if (event.which == '13') {
                event.preventDefault();
            }
        });

    </script>*@

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

</body>
</html>
