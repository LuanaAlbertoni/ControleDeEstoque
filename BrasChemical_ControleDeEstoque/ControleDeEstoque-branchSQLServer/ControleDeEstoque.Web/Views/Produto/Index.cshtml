@model IEnumerable<ControleDeEstoque.Web.Models.Produto>

@{
    Layout = "~/Views/Shared/_LayoutList.cshtml";
    ViewBag.Title = "Produtos";
}

<div id="addbutton" class="col-sm-6 text-right"> <a class="btn btn-outline btn-primary" href="@Url.Action("Create")">Adicionar Novo</a></div>

<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="tabela">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Litros)
                </th>
                <th>
                    Pre Produto
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Litros)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreProduto.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProdutoID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProdutoID })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<!-- /.table-responsive -->
