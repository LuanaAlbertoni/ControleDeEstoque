@model ControleDeEstoque.Web.Models.ModelViewHome

@{
    ViewBag.Title = "Inicio";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Controle de Estoque</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-file-o fa-4x"></i>
                    </div>
                    <div class="col-xs-10 text-right">
                        <div class="huge">@Model.LoteID</div>
                        <div>Último Lote Gerado</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "OrdemFabricacao")">
                <div class="panel-footer">
                    <span class="pull-left">Ordens de Fabricação</span>
                    <span class="pull-right">
                        <i class="fa fa-arrow-circle-right"></i>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-tint fa-4x"></i>
                    </div>
                    <div class="col-xs-10 text-right">
                        <div class="huge">@Model.LotesEsperando</div>
                        <div>Lotes esperando ser envasados</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("SelecionarLote", "Estoque")">
                <div class="panel-footer">
                    <span class="pull-left">Produção</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-truck fa-4x"></i>
                    </div>
                    <div class="col-xs-10 text-right">
                        <div class="huge">@Model.ProdutosEsperando</div>
                        <div>Produtos esperando ser entregues</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("ProdutosComEstoque", "Expedicao")">
                <div class="panel-footer">
                    <span class="pull-left">Expedição</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
